{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "all": false
      },
      "correctness": {
        "noUnusedImports": "warn"
      },
      "suspicious": {
        "noFallthroughSwitchClause": "warn"
      },
      "nursery": {
        "useSortedClasses": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": [
      "node_modules",
      ".vscode",
      ".wk",
      "dist",
      "backend/src/drizzle/migrations",
      "frontend/src/trace",
      "frontend/src/routeTree.gen.ts"
    ]
  }
}
