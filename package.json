{
  "name": "genz-lang",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "web",
    "core"
  ],
  "scripts": {
    "dev:web": "bun run --cwd web dev",
    "dev:core": "bun run --cwd core dev",
    "build:web": "bun run --cwd core build && bun run --cwd web build",
    "build:core": "bun run --cwd core build",
    "lint": "biome lint",
    "typecheck:web": "tsc --noEmit -p web",
    "typecheck:be": "tsc --noEmit -p core",
    "GENZ": "tsx core/genz-runner.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "biome": "^0.3.3",
    "chevrotain": "^11.0.3"
  }
}
