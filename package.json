{
  "name": "genz-lang",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "core"
  ],
  "scripts": {
    "dev:frontend": "bun run --cwd frontend dev",
    "dev:core": "bun run --cwd core dev",
    "build:frontend": "bun run --cwd frontend build",
    "build:core": "bun run --cwd core build",
    "lint": "biome lint",
    "typecheck:web": "tsc --noEmit -p web",
    "typecheck:be": "tsc --noEmit -p core"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "biome": "^0.3.3",
    "chevrotain": "^11.0.3"
  }
}
